<%= form_tag url_for(action: 'new'), method: "post" do %>
      <%= label_tag 'Username' %>
      <%= text_field_tag 'username', @user.username %>
      <%= label_tag 'Email' %>
      <%= email_area_tag 'email', @user.email %>
      <%= label_tag 'Password' %>
      <%= password_field_tag 'password', @user.password %>
      <%= submit_tag "Create Post" %>
    <% end %>
